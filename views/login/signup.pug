extends ../layout
block content
	p Ingresa a <i>Más Ferreterias</i>
	div(class="uk-vertical-align uk-text-center uk-height-1-1")
		div(class="uk-vertical-align-middle", style="width: 250px;")
			form(method='post', class='uk-form-stacked')
				fieldset(class='uk-fieldset')
					legend(class='uk-legend') Sign-Up
					div(class='uk-margin')
						label(for='username') Username
					div(class='uk-margin')
						div(class='uk-inline')
							span(class='uk-form-icon uk-form-icon-flip', uk-icon='icon: user')
							input(type='text', name='username', placeholder='Usuario', class='uk-input uk-form-width-medium', value=username)
					div(class='uk-margin')
						label(for='password') Password
					div(class='uk-margin')
						div(class='uk-inline')
							span(class='uk-form-icon uk-form-icon-flip', uk-icon='icon: lock')
							input(type='password', name='password', placeholder='Contraseña', class='uk-input uk-form-width-medium')
					div(class='uk-margin')
						label(for='repassword') Re-Password
					div(class='uk-margin')
						div(class='uk-inline')
							span(class='uk-form-icon uk-form-icon-flip', uk-icon='icon: lock')
							input(type='password', name='repassword', placeholder='Contraseña', class='uk-input uk-form-width-medium')
					input(type='submit', value="Registrar", class='uk-button uk-button-primary')
	each message in flash
		div(class="uk-alert-danger" uk-alert)
			a(class="uk-alert-close" uk-close)
			p() #{message}